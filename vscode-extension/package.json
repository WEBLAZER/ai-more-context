{
  "name": "vscode-context-enhancer",
  "displayName": "VSCode Context Enhancer",
  "description": "Capture web development context (DOM, console errors, resources) to enhance debugging experience in VSCode",
  "version": "1.0.1",
  "publisher": "WEBLAZER",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Debuggers",
    "Other"
  ],
  "keywords": [
    "web",
    "debug",
    "context",
    "dom",
    "console",
    "errors",
    "chrome"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:vscode-context-enhancer.startServer",
    "onCommand:vscode-context-enhancer.stopServer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vscode-context-enhancer.startServer",
        "title": "Start Context Server"
      },
      {
        "command": "vscode-context-enhancer.stopServer",
        "title": "Stop Context Server"
      }
    ],
    "configuration": {
      "title": "VSCode Context Enhancer",
      "properties": {
        "vscode-context-enhancer.port": {
          "type": "number",
          "default": 3000,
          "description": "WebSocket server port"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.2.2",
    "@types/node": "14.x",
    "eslint": "^7.27.0",
    "@typescript-eslint/eslint-plugin": "^4.26.0",
    "@typescript-eslint/parser": "^4.26.0",
    "glob": "^7.1.7",
    "mocha": "^8.4.0",
    "typescript": "^4.3.2",
    "vscode-test": "^1.5.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WEBLAZER/vscode-context-enhancer.git"
  },
  "bugs": {
    "url": "https://github.com/WEBLAZER/vscode-context-enhancer/issues"
  },
  "homepage": "https://github.com/WEBLAZER/vscode-context-enhancer#readme",
  "license": "MIT",
  "badges": [
    {
      "url": "https://img.shields.io/github/license/WEBLAZER/vscode-context-enhancer",
      "href": "https://github.com/WEBLAZER/vscode-context-enhancer/blob/main/LICENSE",
      "description": "License"
    }
  ]
}
